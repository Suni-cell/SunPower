<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".estadisticas">

    <LinearLayout
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="56dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button5"
            android:layout_width="72dp"
            android:layout_height="45dp"
            android:backgroundTint="@color/white"
            android:text="X"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/imageButton"
            app:layout_constraintEnd_toEndOf="@+id/imageButton2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.0"
            tools:ignore="TouchTargetSizeCheck" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/name_sunpower" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/b_botones"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="112dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/imageButton9"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/bot_barra_registrar" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="142dp"
            android:layout_height="48dp"
            android:background="@color/white"
            app:srcCompat="@drawable/bot_barra_estadisticas_selec"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="138dp"
            tools:layout_editor_absoluteY="79dp" />
        <ImageView
            android:id="@+id/b_monitoreo"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/bot_barra_monitoreo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearconsumo"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/b_botones"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/Tv_consumo"
            android:layout_width="152dp"
            android:layout_height="47dp"
            android:layout_margin="15dp"
            android:text="Consumo de Todas las Terrazas"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/Tv_consumodos"
            android:layout_width="227dp"
            android:layout_height="33dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:background="#F7C056"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="Kwh" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearproduccion"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/linearconsumo"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:id="@+id/Tv_produccion"
            android:layout_width="152dp"
            android:layout_height="47dp"
            android:layout_margin="15dp"
            android:text="Producción de Todas las Terrazas" />

        <TextView
            android:id="@+id/Tv_producciondos"
            android:layout_width="227dp"
            android:layout_height="33dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:background="#F7C056"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:text="Kwh" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearnumero"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/linearproduccion"
        tools:layout_editor_absoluteX="0dp">
        <TextView
            android:id="@+id/Tv_numero"
            android:layout_width="152dp"
            android:layout_height="47dp"
            android:layout_margin="15dp"
            android:text="Numero de Terrazas Incluidas" />

        <TextView
            android:id="@+id/Tv_numerodos"
            android:layout_width="227dp"
            android:layout_height="33dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="15dp"
            android:background="#F7C056"
            android:layout_weight="1"
            android:text="#" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearenergia"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/linearnumero"
        tools:layout_editor_absoluteX="0dp">
        <TextView
            android:id="@+id/Tv_energia"
            android:layout_width="152dp"
            android:layout_height="47dp"
            android:layout_margin="15dp"
            android:text="Energía Obtenida en Una Semana" />

        <TextView
            android:id="@+id/Tv_energiados"
            android:layout_width="227dp"
            android:layout_height="33dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#F7C056"
            android:layout_weight="1"
            android:text="Kwh" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linarimpacto"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/linearenergia"
        tools:layout_editor_absoluteX="0dp">
        <TextView
            android:id="@+id/Tv_impacto"
            android:layout_width="152dp"
            android:layout_height="47dp"
            android:layout_margin="15dp"
            android:text="Impacto Ambiental" />

        <TextView
            android:id="@+id/Tv_impactodos"
            android:layout_width="227dp"
            android:layout_height="33dp"
            android:layout_marginTop="18dp"
            android:background="#F7C056"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:hint="CO2 Ahorrado" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearporcentaje"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/linarimpacto"
        tools:layout_editor_absoluteX="0dp">
        <TextView
            android:id="@+id/Tv_porcentaje"
            android:layout_width="152dp"
            android:layout_height="47dp"
            android:layout_margin="15dp"
            android:text="Porcentaje de Energia Solar Utilizada Semana" />

        <TextView
            android:id="@+id/Tv_porcentajedos"
            android:layout_width="227dp"
            android:layout_height="33dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="#F7C056"
            android:layout_weight="1"
            android:text="kWh   %" />
    </LinearLayout>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/linearporcentaje"
        tools:layout_editor_absoluteX="0dp">
        <TextView
            android:id="@+id/Tv_dias"
            android:layout_width="152dp"
            android:layout_height="47dp"
            android:layout_margin="15dp"
            android:text="Dias de Producción Inferior al Promedio" />

        <TextView
            android:id="@+id/Tv_diasdos"
            android:layout_width="227dp"
            android:layout_height="33dp"
            android:layout_marginTop="18dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight="1"
            android:background="#F7C056"
            android:text="Kwh" />
    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>
